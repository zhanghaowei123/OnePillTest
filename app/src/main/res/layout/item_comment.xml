<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:background="#f7f7f7"
    android:orientation="vertical"
    android:padding="5dp"
    android:paddingBottom="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_commenterImg"
            android:layout_width="33dp"
            android:layout_height="38dp"
            android:src="@drawable/user" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_commenter_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:paddingLeft="4dp"
                    android:text="Charlotte"
                    android:textColor="#999"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:text="2019/10/1"
                    android:id="@+id/tv_commenter_time"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:paddingLeft="4dp"
                    android:textColor="#bbb"
                    android:textSize="9dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <!--点赞，未实现-->
            <ImageView
                android:id="@+id/iv_good"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/up_no" />
            <!--点赞数量-->
            <TextView
                android:id="@+id/tv_goodnum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0000"
                android:gravity="center"
                android:padding="0dp"
                android:textColor="#22a9ef"
                android:textSize="12dp" />
            <!--踩-->
            <ImageView
                android:id="@+id/iv_bad"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/down_no"
                android:text="" />
            <TextView
                android:id="@+id/tv_badnum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0000"
                android:gravity="center"
                android:padding="0dp"
                android:textColor="#22a9ef"
                android:textSize="12dp" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:text="接下来我要评论了：床前明月光，疑是地上霜。举头望明月。。。"
        android:id="@+id/tv_commenter_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="7dp"
        android:paddingTop="6dp"
        android:textColor="#121212"
        android:textSize="15dp" />

</LinearLayout>