<?xml version="1.0" encoding="utf-8"?>
<com.onepilltest.util.HeadImageUtil
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/personal_user_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/personal_user_img"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/personal_back" />
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/personal_user_path"
            android:layout_alignBottom="@+id/personal_user_img"
            android:layout_width="match_parent"
            android:layout_height="50dp"></LinearLayout>


        <LinearLayout
            android:layout_alignTop="@+id/personal_user_path"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/personal_user_setting"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:paddingLeft="10dp">

                <ImageView
                    android:id="@+id/iv_setting"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/image_back"
                    android:padding="3dp"
                    android:src="@drawable/user" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/personal_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的神"
                        android:textColor="#f7f7f7"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/personal_work"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="2017011829"
                        android:textColor="#555"
                        android:textSize="16dp" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/personal_list1_view"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/personal_user_setting"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp">

                    <LinearLayout
                        android:id="@+id/ll_order"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/order" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的订单"
                            android:textColor="#3C3C3C"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_margin="2dp"
                            android:src="@drawable/cart" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="购物车"
                            android:textColor="#3C3C3C"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/wallet" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="钱包"
                            android:textColor="#3C3C3C"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <!--<LinearLayout
                        android:id="@+id/ll_ask"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ask" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="问诊记录"
                            android:textColor="#3C3C3C"
                            android:textSize="14dp" />

                    </LinearLayout>-->

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/personal_list2_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/personal_list1_view"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_focus_article"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/underline"
                    android:gravity="center"
                    android:paddingLeft="15dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_margin="6dp"
                        android:src="@drawable/help" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingTop="20dp"
                        android:text="收藏的文章"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_help"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/underline"
                    android:gravity="center"
                    android:paddingLeft="15dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_margin="6dp"
                        android:src="@drawable/help" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingTop="20dp"
                        android:text="帮助与反馈"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_sc"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/underline"
                    android:gravity="center"
                    android:paddingLeft="15dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_margin="6dp"
                        android:src="@drawable/sc" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingTop="20dp"
                        android:text="关注和收藏"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</com.onepilltest.util.HeadImageUtil>