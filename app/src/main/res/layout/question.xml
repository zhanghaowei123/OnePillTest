<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/underline"
    android:orientation="vertical">
    <!--标题栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/question_back"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="快速问诊"
            android:textColor="#000"
            android:textSize="16dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--咨询标题-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical">


            <EditText
                android:id="@+id/et_kswz_title"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@drawable/edit_shape"
                android:hint="请输入咨询标题"
                android:textSize="12dp" />
        </LinearLayout>

        <!--是否就诊过-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="是否线下去医院就诊过" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/kswz_outline_yes"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:background="#eee"
                    android:padding="0dp"
                    android:text="是"
                    android:textColor="#777"
                    android:textSize="10dp" />

                <Button
                    android:id="@+id/kswz_outline_no"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="#eee"
                    android:padding="0dp"
                    android:text="否"
                    android:textColor="#777"
                    android:textSize="10dp" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="#ccc" />

    <EditText
        android:id="@+id/kswz_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="200dp"
        android:background="@null"
        android:gravity="top"
        android:hint="请描述你的年龄，性别，症状及就诊经历，便于医生进行准确的分析，我们会保证你的隐私安全"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_upimg"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="#f4f4f4"
            android:text="添加照片/视频" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="你上传的附件仅队解答问题的医生可见"
            android:textSize="12dp" />


    </LinearLayout>

    <Button
        android:id="@+id/question_finish"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_circle"
        android:text="完成"
        android:textColor="#fff"
        android:textSize="14dp" />

</LinearLayout>