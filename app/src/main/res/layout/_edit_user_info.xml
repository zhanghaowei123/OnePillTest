<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical">

    <!--标题栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/underline"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/edit_user_info_back"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="38"
            android:text="个人信息"
            android:textColor="#000"
            android:textSize="16dp" />

        <Button
            android:id="@+id/edit_user_info_save"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="7dp"
            android:layout_weight="6"
            android:background="@drawable/button_circle_little"
            android:text="保存"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/underline"
        android:paddingLeft="30dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/edit_user_info_Img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/user" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="6">

            <TextView
                android:id="@+id/edit_user_info_setImg"
                android:padding="30dp"
                android:text="点击上传头像"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <!--昵称-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/underline"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView

                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="用户昵称"
                android:textColor="#000"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/edit_user_info_nickName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <!--性别-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/underline"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="身份证"
                android:textColor="#000"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/edit_user_info_PID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </LinearLayout>

        <!--修改密码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/underline"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="修改密码"
                android:textColor="#000"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/edit_user_info_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/underline"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="绑定手机"
                android:textColor="#000"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/edit_user_info_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </LinearLayout>

    </LinearLayout>
    <!--保存按钮-->
