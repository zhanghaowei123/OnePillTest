<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f0f0"
        android:orientation="vertical">

        <!--标题栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#808080"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <Button
                android:id="@+id/dc_details_back"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/back_white_left" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:textStyle="bold"
                android:text="医生简介"
                android:textColor="#fff"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="3dp"
                android:layout_weight="2"
                android:padding="3dp"
                android:src="@drawable/logo" />
        </LinearLayout>
        <!--<LinearLayout
            android:paddingLeft="10dp"
            android:background="#808080"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/dc_details_back"
                android:src="@drawable/back_white_left"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_height="30dp" />

            <TextView
                android:text="医生简介"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="17dp"
                android:layout_width="270dp"
                android:layout_height="match_parent" />

            <ImageView
                android:src="@drawable/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="#808080"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <ImageView
                android:id="@+id/dc_details_headImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="4"
                android:padding="12dp">

                <TextView
                    android:id="@+id/dc_details_name"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:text=""
                    android:textColor="#fff"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/dc_details_hos"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="3dp"
                    android:text=""
                    android:textColor="#fff"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/doctor_focus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingTop="18dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:src="@drawable/share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="关注"
                    android:textColor="#fff" />

            </LinearLayout>

        </LinearLayout>

        <!--第二块-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/underline"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rightline"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="11"
                            android:textColor="#333"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="年"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="从业年限"
                        android:gravity="center"
                        android:paddingLeft="18dp"
                        android:paddingRight="20dp"
                        android:textSize="14dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rightline"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="2000"
                        android:textColor="#333"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="回答次数"
                        android:textSize="14dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="4.9"
                            android:textColor="#f80"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="分"
                            android:textColor="#f80"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="★★★★★"
                        android:textColor="#f80"
                        android:textSize="20dp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/underline"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ahh" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="专业医师认证"
                    android:textColor="#3C3C3C" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ahh" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="平均响应时长10分钟"
                    android:textColor="#3C3C3C" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/underline"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="擅长疾病"
                    android:textColor="#444"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="96dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/rightline"
                        android:gravity="center"
                        android:text="肺炎"
                        android:textColor="#777"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="96dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/rightline"
                        android:gravity="center"
                        android:text="咽喉炎"
                        android:textColor="#777"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="96dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/rightline"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#777"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="96dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#777"
                        android:textSize="14dp" />

                </LinearLayout>

            </LinearLayout>

            <!--个人简介-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/underline"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="个人简介"
                        android:textStyle="bold"
                        android:textColor="#444"
                        android:textSize="16dp" />

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/dc_details_editResume"
                        android:layout_marginRight="10dp"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ahh"
                        />
                </LinearLayout>

                <EditText
                    android:id="@+id/dc_details_resume"
                    android:inputType="textMultiLine"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="杳渺音讯 余我孤奏" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/underline"
                android:paddingLeft="13dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="联系电话"
                    android:textColor="#333"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/dc_details_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:layout_weight="7"
                    android:paddingLeft="140dp"
                    android:text=""
                    android:textSize="16dp" />

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:src="@drawable/yjt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/underline"
                android:paddingLeft="13dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/location" />

                <TextView
                    android:id="@+id/dc_details_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="17"
                    android:text="河北师范大学软件学院"
                    android:textColor="#3C3C3C"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:src="@drawable/yjt" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</ScrollView>