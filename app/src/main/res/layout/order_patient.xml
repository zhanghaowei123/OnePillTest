<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/order_back"
            android:src="@drawable/left"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:gravity="center"
            android:textSize="16dp"
            android:text="用户订单"
            android:textColor="#3C3C3C"
            android:layout_width="290dp"
            android:layout_height="match_parent" />

        <ImageView
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>

    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/recycle_buyuer"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_order_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="全部"
            android:textSize="15dp"
            android:background="#fff"/>
        <Button
            android:id="@+id/btn_order_unpay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="未付款"
            android:textSize="15dp"
            android:background="#fff"/>
        <Button
            android:id="@+id/btn_order_unsend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="未发货"
            android:textSize="15dp"
            android:background="#fff"/>
        <Button
            android:id="@+id/btn_order_waitget"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待收货"
            android:textSize="15dp"
            android:background="#fff"/>
        <Button
            android:id="@+id/btn_order_finish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已完成"
            android:textSize="15dp"
            android:background="#fff"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:id="@+id/order_tab_widget">

    </FrameLayout>

</LinearLayout>