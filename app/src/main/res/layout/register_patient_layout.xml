<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#F5FFFA"
android:orientation="vertical">
<!--header-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#F5FFFA"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/register_pa_back"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:src="@drawable/left" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:gravity="center"
        android:text="医生注册"
        android:textColor="#fff"
        android:textSize="18dp" />

    <!--<ImageView-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginRight="3dp"-->
    <!--android:layout_weight="2"-->
    <!--android:padding="3dp"-->
    <!--android:src="@drawable/logo" />-->
</LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="30dp"
    android:layout_height="150dp">
    <TextView
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        android:text="Hi，Welcome！"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
<!--注册输入-->
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">
    <!--注册信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/underline_register"
        android:orientation="horizontal"
        android:padding="10dp">

        <!--<TextView-->
        <!--android:layout_width="60dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="手机号:"-->
        <!--android:textSize="17dp" />-->

        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/phone2" />

        <EditText
            android:id="@+id/edit_register_patient_phone"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入您的手机号"
            android:inputType="number"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/underline_register"
        android:orientation="horizontal"
        android:padding="10dp">

        <!--<TextView-->
        <!--android:layout_width="60dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="密码:"-->
        <!--android:textSize="17dp" />-->


        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/password" />

        <EditText
            android:id="@+id/edit_register_patient_password"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入您的密码"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/underline_register"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/phone_code" />

        <EditText
            android:id="@+id/edit_register_patient_getcheckwords"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            android:background="@null"
            android:inputType="number"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_send_verification_code"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/button_circle_little"
            android:layout_height="30dp"
            android:textColor="#fff"
            android:text="获取验证码" />
    </LinearLayout>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <CheckBox
        android:id="@+id/checkbox_patient_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/secret" />
</LinearLayout>

<ImageView
    android:id="@+id/patient_next"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="30dp"
    android:src="@drawable/next" />
</LinearLayout>