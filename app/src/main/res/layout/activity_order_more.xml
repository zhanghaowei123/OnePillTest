<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--标题栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/underline"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/order_more_back"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="38"
            android:text="订单详情"
            android:textColor="#000"
            android:textSize="16dp" />

        <!--<Button-->
        <!--android:id="@+id/edit_address_save"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="27dp"-->
        <!--android:layout_marginLeft="5dp"-->
        <!--android:layout_marginRight="7dp"-->
        <!--android:layout_weight="6"-->
        <!--android:background="@drawable/button_circle_little"-->
        <!--android:text="保存"-->
        <!--android:textColor="#fff" />-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/order_more_img"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_margin="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/order_more_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="里的撒解放拉萨的"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/order_more_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="里的撒解的哈斯卡拉附件阿斯顿上来打几份受打击啊放到爱放拉萨的"
                android:textSize="14dp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="@drawable/button_circle_little"
        android:id="@+id/order_more_pay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="支付"
        android:textSize="16dp" />
</LinearLayout>